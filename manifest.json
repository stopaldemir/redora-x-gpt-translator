{
    "manifest_version": 3,
    "name": "Redora X - GPT Translate",
    "description": "Translate tweets automatically while you scroll using GPT models.",
    "version": "1.1",
    "permissions": [
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://*.x.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "image.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://*.x.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "image.png"
    }
}